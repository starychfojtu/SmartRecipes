<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="SmartRecipes.Mobile.Pages.ShoppingListItemsPage"
             xmlns:views="clr-namespace:SmartRecipes.Mobile.Views;assembly=SmartRecipes.Mobile"
             xmlns:suave="clr-namespace:SuaveControls.Views;assembly=SuaveControls.FloatingActionButton"
             Title="Ingredients">
    <ContentPage.Content>
        <StackLayout
            Padding="16, 16, 16, 16">
            <ListView
                x:Name="ItemsListView"
                SeparatorColor="{StaticResource dividerColor}"
                RowHeight="64">
            </ListView>
            <suave:FloatingActionButton 
                x:Name="AddItemsButton"
                HorizontalOptions="End" 
                WidthRequest="50" 
                HeightRequest="50" 
                VerticalOptions="End"
                Image="add" 
                ButtonColor="{StaticResource accentColor}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
