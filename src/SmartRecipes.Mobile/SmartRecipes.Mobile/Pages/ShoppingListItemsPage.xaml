<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    Style="{StaticResource page}"
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="SmartRecipes.Mobile.Pages.ShoppingListItemsPage"
    xmlns:suave="clr-namespace:SuaveControls.Views;assembly=SuaveControls.FloatingActionButton"
    Title="Ingredients">
    <ContentPage.Content>
        <StackLayout
            Padding="16, 16, 16, 16">
            <ListView
                x:Name="ItemsListView"
                SeparatorColor="{StaticResource dividerColor}"
                RowHeight="64"
                CachingStrategy="RecycleElement"/>
            <suave:FloatingActionButton 
                x:Name="AddItemsButton"
                HorizontalOptions="End" 
                VerticalOptions="End"
                WidthRequest="80" 
                HeightRequest="90"
                Image="add.png"
                ButtonColor="{StaticResource accentColor}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
